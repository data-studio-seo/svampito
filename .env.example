# Telegram Bot Token (da @BotFather)
BOT_TOKEN=your_bot_token_here

# PostgreSQL connection string (Railway la fornisce automaticamente)
DATABASE_URL=postgresql+asyncpg://user:password@host:port/dbname

# Webhook settings (Railway fornisce PORT e RAILWAY_PUBLIC_DOMAIN)
PORT=8443
RAILWAY_PUBLIC_DOMAIN=your-app.up.railway.app

# Opzionale: Anthropic API key per NLP avanzato
ANTHROPIC_API_KEY=
